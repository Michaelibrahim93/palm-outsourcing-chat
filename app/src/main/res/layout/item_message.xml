            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="me"/>
        <TextView android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="line 1line 1line 1line 1line 1line 1line 1line 1line 1line 1line 1\nline 1line 1line 1line 1line 1line 1line 1"/>
    </LinearLayout>
</FrameLayout>